{
  "name": "talendig-monorepo",
  "version": "1.0.0",
  "description": "Talendig NodeJS Learning Program - Monorepo",
  "private": true,
  "workspaces": [
    "NodeJS/first-class",
    "NodeJS/second-class"
  ],
  "scripts": {
    "start": "npm run start --workspace=NodeJS/first-class",
